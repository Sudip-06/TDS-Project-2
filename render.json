
services:
  - type: web
    name: data-analyst-agent
    env: python
    region: oregon   # pick a region close to you/users
    plan: starter   # free/starter/… (choose in dashboard when deploying)
    buildCommand: pip install -r requirements.txt
    startCommand: uvicorn app:app --host 0.0.0.0 --port $PORT
    envVars:
      - key: PYTHONUNBUFFERED
        value: "1"
      - key: MPLBACKEND
        value: Agg
      # put your token in the Render dashboard (don’t commit it)
      - key: OPENROUTER_TOKEN
        sync: false
      # if your code reads GITHUB_TOKEN instead:
      - key: GITHUB_TOKEN
        sync: false
    healthCheckPath: /
    autoDeploy: true
